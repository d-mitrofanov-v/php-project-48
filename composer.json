{
    "name": "hexlet/code",
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Parsers.php",
            "src/GenDiff.php",
            "src/GetDifference.php",
            "src/Render.php",
            "src/Formatters.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Json.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hexlet\\Code\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit tests"
    },
    "authors": [
        {
            "name": "d-mitrofanov-v",
            "email": "dmitriy.mitrofanov.v@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "require": {
        "php": "^8.3",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "hexlet/phpstan-fp": "^3.1"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
